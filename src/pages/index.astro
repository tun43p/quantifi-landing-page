---
import Config from "@config";
import Layout from "@layouts/LLayout.astro";
import Terminal from "@components/TTerminal.astro";
---

<Layout title="TBA">
  <main>
    <Terminal
      contents={[
        { text: `>> Project.start('${Config.title}');` },
        { text: ">> Dev status: In progress", symbol: "." },
        { text: ">> Launch date: TBA", symbol: "/" },
      ]}
    >
      <img src="/logo.svg" alt={`${Config.title} logo`} />
    </Terminal>
  </main>
</Layout>

<style>
  main {
    height: calc(100vh - 8rem);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  img {
    margin-bottom: 4rem;
  }
</style>
